<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_card_item_team_home"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="@dimen/corner_radius_card_item_hom"
    card_view:cardElevation="@dimen/elevation_card_team_home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_card_item_home">

        <ImageView
            android:id="@+id/iv_item_team_home"
            android:layout_width="@dimen/width_iv_item_home"
            android:layout_height="@dimen/height_iv_item_home"
            android:background="@color/colorTranslucentBlack"
            android:padding="@dimen/padding_iv_item_team_home"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_bold"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_card_title_size"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.059"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_team_home"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.085" />

        <TextView
            android:id="@+id/tv_stadium"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_regular"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_card_stadium_size"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.333"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_team_home"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_team_name"
            card_view:layout_constraintVertical_bias="0.095" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_regular"
            android:textColor="@color/colorOffWhite"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.333"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_team_home"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_stadium"
            card_view:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/bt_wallpapers"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_bt_item_home"
            android:layout_marginLeft="@dimen/margin_left_bt_item_home"
            android:layout_marginBottom="@dimen/margin_bottom_bt_item_home"
            android:backgroundTint="@color/colorAccent"
            android:text="Wallpapers"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_team_home" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>